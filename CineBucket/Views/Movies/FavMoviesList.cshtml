@model List<FavoriteMovie>

@{
    ViewData["Title"] = "Meus filmes";
    string imageUrlBase = "https://image.tmdb.org/t/p/w200";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>


@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Poster</th>
            <th>Título</th>
            <th>Adicionado em</th>
            <th>Duração</th>
            <th>Prioridade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mov in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(mov.PosterPath))
                        {
                            <img src="@($"{imageUrlBase}{mov.PosterPath}")" alt="@mov.Title" style="width: 100px; height: auto;" />
                        }
                        else
                        {
                            <span>Sem imagem</span>
                        }
                    </td>
                    <td>@mov.Title</td>
                    <td>
                        @mov.AddedAt.ToString("dd/mm/yyyy")
                    </td>
                    @{
                        int runtimeInMinutes = mov?.Runtime ?? 0;
                        int hours = runtimeInMinutes / 60;
                        int minutes = runtimeInMinutes % 60;
                        <td>@($"{hours}h{minutes}m")</td>
                    }
                    <td>@mov?.Priority</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>Lista vazia.</p>
}